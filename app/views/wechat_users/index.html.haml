%h1 Listing wechat_users

%table.table.table-hover
  %thead
    %tr
      %th OpenID
      %th NickName
      %th HeadImage
      %th UpdatedAt
      %th
      %th
      %th

  %tbody
    - @wechat_users.each do |wechat_user|
      %tr
        %td= wechat_user.openid
        %td= wechat_user.nickname
        %td
          %img{src: wechat_user.headimgurl, width: '50px', height: '50px'}
        %td= l wechat_user.updated_at
        %td= link_to 'Show', wechat_user
        %td= link_to 'Edit', edit_wechat_user_path(wechat_user)
        %td= link_to 'Destroy', wechat_user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Wechat user', new_wechat_user_path
