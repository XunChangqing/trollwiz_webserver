= form_for(@black_domain_name) do |f|
  - if @black_domain_name.errors.any?
    #error_explanation
      %h2
        = pluralize(@black_domain_name.errors.count, "error")
        prohibited this black_domain_name from being saved:
      %ul
        - @black_domain_name.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :domain_name
    = f.text_field :domain_name, class: 'form-control'
  .actions
    = f.submit
