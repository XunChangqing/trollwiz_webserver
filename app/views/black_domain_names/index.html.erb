<p id="notice"><%= notice %></p>

<h1>Listing Black Domain Names</h1>

<table>
  <thead>
    <tr>
      <th>Domain name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @black_domain_names.each do |black_domain_name| %>
      <tr>
        <td><%= black_domain_name.domain_name %></td>
        <td><%= link_to 'Show', black_domain_name %></td>
        <td><%= link_to 'Edit', edit_black_domain_name_path(black_domain_name) %></td>
        <td><%= link_to 'Destroy', black_domain_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

